<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="30dp"
    android:weightSum="1"
    tools:ignore="HardcodedText" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:weightSum="1" >

        <EditText
            android:id="@+id/et_insurance_service_no"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Service Number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:background="@xml/rounded_input_box"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:paddingRight="3dp" 
            >
        </EditText>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:weightSum="1" >

        <Spinner
            android:id="@+id/sp_insurance_operator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:prompt="@string/select_insurance_operator_option" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:weightSum="1" >

        <EditText
            android:id="@+id/et_insurance_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Amount"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:background="@xml/rounded_input_box"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:paddingRight="3dp" 
            >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:weightSum="1" >

        <Spinner
            android:id="@+id/sp_insurance_route"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:entries="@array/root_array_option"
            android:prompt="@string/select_insurance_route_option" />
    </LinearLayout>
<LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/cachecolor"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".75"
                android:gravity="center|left" >

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/cachecolor"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:text="Enter Date of Birth"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:gravity="center" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/date_icon" />
            </LinearLayout>
        </LinearLayout>
    <Button
        android:id="@+id/btn_insurance_recharge"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/green_button"
        android:text="Recharge"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>
</ScrollView>