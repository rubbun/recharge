<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2D2D2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@xml/gradient_header"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECHARGE APP"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!--
             <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="Unlimited Master Distributor, Distributor &amp; Retailer Network"
            android:textColor="#ffffff"
            android:textSize="10sp" />
        -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="8dp" >

        <Spinner
            android:id="@+id/spinner_services"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:entries="@array/service_arrays"
            android:prompt="@string/select_option"
            android:textColor="#000000" />

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@xml/rounded_bg" >
        </FrameLayout>
    </LinearLayout>

</LinearLayout><!--
